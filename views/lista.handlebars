<div class="container">
    <h1>Lista de Pacotes</h1>

    <ul>
        {{#each pacotes}}
            <li class="card"> 
                <p><strong>Remetente:</strong> {{remetente}}</p>
                <p><strong>Destinatário:</strong> {{destinatario}}</p>
                <p><strong>Endereço de entrega:</strong> {{endereco}}</p>
                 
                <form action="/pacotes/delete/{{id}}" method="POST">
                  <input type="submit" value="excluir" />
                </form>
                <form action="/pedido/atualizar/{{id}}" method="post">
                  <button type="submit" class="btn-edit">Editar</button>
                </form>
            </li>
        {{/each}}
    </ul>

    <div class="s">
        <form action="/logout" method="POST">
            <input type="submit" value="Sair" class="btn-sair" />
        </form>
    </div>
</div>